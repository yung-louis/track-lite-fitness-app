<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Menu Bar -->
    <LinearLayout
        android:id="@+id/topMenuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/design_default_color_primary_dark">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/baseline_chevron_left_24"
            android:contentDescription="date-back" />

        <!-- Today's date -->
        <TextView
            android:id="@+id/tvToday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <!-- Arrows to navigate forward -->
        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/baseline_chevron_right_24"
            android:contentDescription="date-forward" />

        <!-- Date menu button -->
        <ImageButton
            android:id="@+id/btnDateMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/baseline_calendar_month_24"
            android:contentDescription="calendar" />
    </LinearLayout>

    <!-- Vertical stack of 5 text fields -->
    <LinearLayout
        android:id="@+id/verticalStack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topMenuBar"
        android:orientation="vertical"
        android:padding="16dp">
    </LinearLayout>
</RelativeLayout>